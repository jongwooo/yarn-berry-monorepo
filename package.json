{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write"
    ],
    "*.{html,css,less,ejs,json}": [
      "prettier --write"
    ],
    "*.{md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "packageManager": "yarn@3.1.1"
}
